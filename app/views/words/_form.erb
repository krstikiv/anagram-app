<% if !@errors.blank? %>
<div class="row">
    <p class="errors">
        <%= "#{@errors}" %>
    </p>
</div>
<% end %>


<div class="row">
<div class="col-xs-12">
<form action="<%= words_form_action(@word) %>"  id="<%= words_form_id(@word) %>" class="form" method="post">
     <input type="hidden" name="_method" value="<%= words_form_method(@word) %>">

     <div class="form-group">
        <label for="word">Make a contribution:</label>
        <input type="text" name="text" placeholder="Enter a new word" value="<%= @word.text %>">
    </div>
    <button type="submit" class="btn btn-success btn-lg" value="submit"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp; Add Word</button>
</form>
</div>
</div>

